{{!< default}}

{{> "navbar"}}

{{#tag}}
<header class="relative">
  {{#if feature_image}}
  <figure>
    <img
      class="max-h-70-screen object-cover w-full h-auto max-w-full"
      srcset="{{img_url feature_image size="s"}} 300w,
          {{img_url feature_image size="m"}} 600w,
          {{img_url feature_image size="l"}} 1000w,
          {{img_url feature_image size="xl"}} 2000w"
      sizes="(max-width: 1000px) 1000px, 2000px"
      loading="lazy"
      src="{{img_url feature_image size="xl"}}"
      alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
    />
  </figure>
  {{/if}}

  <div{{#if feature_image}} class="absolute flex items-end inset-0"{{/if}}>
    <div class="{{#unless feature_image}}mt-20 {{/unless}}container mx-auto mb-8 px-4">
      <h1 class="text-4xl font-extrabold uppercase tracking-widest mb-2">{{name}}</h1>
      <p class="text-blue-gray-300">
        {{#if description}}
            {{description}}
        {{else}}
            A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
        {{/if}}
      </p>
    </div>
  </div>
</header>
{{/tag}}

<div class="gh-postfeed container mx-auto space-y-8 md:space-y-12">
{{#foreach posts}}
  <div class="px-4 md:px-0  ">
    {{> "card"}} {{!-- partials/card.hbs --}}
  </div>
{{/foreach}}
</div>
