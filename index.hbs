{{!< default}}

<nav class="navbar">
    <div class="container">
        <div class="navbar-brand">
            <span class="navbar-item">
                raffyalcoriza / #
            </span>
        </div>
    </div>
</nav>

<main class="container posts-container">
    {{#foreach posts}}
        <article>
            {{#if tags}}
            <div class="post-tags">
                {{#foreach tags }}
                    <a href="{{ url }}" title="{{ name }}" class="is-uppercase is-size-7">{{ name }}</a>
                {{/foreach}}
            </div>
            {{/if}}
            <a href="{{ url }}">
                <h2 class="post-title is-size-3 has-text-weight-bold">{{ title }}</h2>
            </a>
            <p>{{ excerpt }}</p>
        </article>
    {{/foreach}}
</main>