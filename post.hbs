{{!< default}}

{{#post}}
{{> "navbar" has_featured_image="{{#if feature_image}}true{{else}}false{{/if}}"}}

<main class="post {{#if feature_image}}has-featured-image{{/if}}">
    <header class="post-header">
        {{#if feature_image}}
        <div class="post-featured-image">
            <img src="{{img_url feature_image size="xl"}}"
                srcset="{{img_url feature_image size="s"}} 320w,
                {{img_url feature_image size="m"}} 640w,
                {{img_url feature_image size="l"}} 960w,
                {{img_url feature_image size="xl"}} 1920w"  
                alt="{{title}}" />
        </div>
        {{/if}}
        <div class="container columns">
            <div class="post-metadata column is-offset-2-tablet is-8-tablet">
                {{#if tags}}
                <div class="post-tags">
                    <span class="post-tag is-uppercase is-size-7">{{ primary_tag.name }}</span>
                </div>
                {{/if}}
                <a href="{{ url }}" title="{{ title }}"><h1 class="post-title">{{title}}</h1></a>
                <time datetime="{{date format='DD-MMM-YYYY'}}">{{date format="DD MMMM YYYY"}}</time>
            </div>
        </div>
    </header>
    <article class="container columns">
        <div class="post-content column is-offset-2-tablet is-8-tablet">
            {{content}}
        </div>
    </article>
</main>

{{#contentFor "scripts" }}
<script>
    $(document).ready(() => {
        $('.post-content').fitVids();
    });
</script>
{{/contentFor}}

{{/post}}