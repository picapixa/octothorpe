{
    "name": "octothorpe",
    "description": "Ghost theme for The Hash",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "scripts": {
        "dev": "gulp",
        "release": "gulp release"
    },
    "license": "MIT",
    "author": {
        "email": "jrpalcoriza@outlook.com",
        "name": "Raffy Alcoriza"
    },
    "keywords": [
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 10,
        "image_sizes": {}
    },
    "devDependencies": {
        "@types/gulp": "^4.0.6",
        "@types/gulp-rename": "^0.0.33",
        "@types/gulp-sass": "^4.0.0",
        "@types/gulp-zip": "^4.0.1",
        "@types/pump": "^1.1.0",
        "@types/sass": "^1.16.0",
        "check-node-version": "^4.0.3",
        "del": "^5.1.0",
        "gulp": "^4.0.2",
        "gulp-livereload": "^4.0.2",
        "gulp-rename": "^2.0.0",
        "gulp-run": "^1.7.1",
        "gulp-sass": "^4.1.0",
        "gulp-style-aliases": "^1.1.11",
        "gulp-zip": "^5.0.1",
        "husky": "^4.2.5",
        "lint-staged": "^10.1.7",
        "prettier": "^2.0.5",
        "pump": "^3.0.0",
        "sass": "^1.26.5",
        "stylelint": "^13.3.3",
        "stylelint-config-sass-guidelines": "^7.0.0",
        "ts-node": "^8.9.0",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.13.0",
        "bulma": "^0.8.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "assets/styles/**/*.scss": [
            "prettier --write"
        ]
    }
}
